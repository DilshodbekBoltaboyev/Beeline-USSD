<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".fragments.menu_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beeline"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="Beeline"
        android:textSize="70sp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
             android:id="@+id/tariflar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tariflar"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="40sp"
            android:textColor="#C8000000"
            />
        <TextView
             android:id="@+id/daqiqalar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daqiqalar"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="40sp"
           android:textColor="#C8000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
             android:id="@+id/internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internet"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="40sp"
           android:textColor="#C8000000"
            />
        <TextView
             android:id="@+id/xizmatlar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xizmatlar"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="40sp"
           android:textColor="#C8000000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
             android:id="@+id/sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="40sp"
           android:textColor="#C8000000"
            />
        <TextView
             android:id="@+id/yangiliklar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yangiliklar"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="40sp"
           android:textColor="#C8000000"
            />

    </LinearLayout>

</LinearLayout>